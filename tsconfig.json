{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2020", "dom"],
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": false,
    "outDir": "dist",
    "allowJs": true
  }
}
